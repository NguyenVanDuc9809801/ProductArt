@model Main_project.Dtos.InfoUpdateDtos

<div class="content  mt-5">
    <form href="/Account/UpdateInfo" method="post" >
        <div class="mb-3">
            <label for="Name" class="form-label"></label>
            <input type="text" asp-for=@Model.Name class="form-control" id="Name" placeholder=@Model.Name>
        </div>
        <div class="mb-3">
            <label for="PhoneNumber" class="form-label"></label>
            <input type="text" asp-for=@Model.PhoneNumber class="form-control" id="PhoneNumber"
                placeholder=@Model.PhoneNumber>
        </div>
        <div class="mb-3">
            <label for="Address" class="form-label"></label>
            <input type="text" asp-for=@Model.Address class="form-control" id="Address" placeholder=@Model.Address>
        </div>
        <div class="form-check">
            @if (Model.Sex.Equals("Male"))
            {
                <input class="form-check-input" type="radio" asp-for=@Model.Sex id="Sex1" value="Male" checked>
            }
            else
            {
                <input class="form-check-input" type="radio" asp-for=@Model.Sex id="Sex1" value="Male">
            }
            <label class="form-check-label" for="flexRadioDefault1">
                Male
            </label>
        </div>
        <div class="form-check">
            @if (Model.Sex.Equals("Famale"))
            {
                <input class="form-check-input" type="radio" asp-for=@Model.Sex value="Famale" id="Sex2" checked>
            }
            else
            {
                <input class="form-check-input" type="radio" asp-for=@Model.Sex value="Famale" id="Sex2">
            }
            <label class="form-check-label" for="flexRadioDefault2">
                Famale
            </label>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Submit</button>
        </div>
    </form>
</div>